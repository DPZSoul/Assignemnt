        function StartBlastoffSequence(){
            var currTime = 50;

            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 0);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 5000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML =  currTime;
            currTime -= 5;
            }, 10000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 15000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 20000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 25000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 30000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 35000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 40000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = currTime;
            currTime -= 5;
            }, 45000);
            setTimeout(function(){
            document.getElementById("BlastoffDisplay").innerHTML = "Blast off";
            currTime -= 5;
            }, 50000);
                
